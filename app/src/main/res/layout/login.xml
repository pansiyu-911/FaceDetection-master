<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".myapplication.Login"
    >

    <ImageView
        android:id="@+id/imageView1_0"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="105dp"
        android:src="@mipmap/i2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:text="基于人脸识别技术的智能考勤系统"
        android:textColor="#000"
        android:textSize="25dp" />


    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/i1_3" />

        <EditText
            android:id="@+id/et_uesrname"
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:hint="学号"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView1_1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/i1_2" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="305dp"
            android:layout_height="match_parent"
            android:hint="密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_log"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_blue_round"
        android:layout_marginTop="10dp"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:onClick="login"
        tools:ignore="OnClick" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="忘记密码?"
        android:textSize="18dp" />

    <Button
        android:id="@+id/set_ip"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        android:text="设置ip地址"
        android:textSize="18dp" />

</LinearLayout>