<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/action_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"

        android:background="#fff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kaoqin2_image"
            android:layout_width="204dp"
            android:layout_height="81dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kaoqin2_tv1"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:gravity="bottom"
                android:text="课程名"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/kaoqin2_tv2"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:textSize="17dp"
                android:text="老师名" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@mipmap/i4_2" />

            <EditText
                android:id="@+id/kaoqin2_search_edit"
                android:layout_width="252dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="#fff"
                android:layout_marginRight="5dp"
                android:hint="搜索考勤记录"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:id="@+id/kaoqin2_tv3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="序号"
                android:textSize="20dp" />

            <View
                android:layout_width="0.5px"
                android:layout_height="fill_parent"
                android:background="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/kaoqin2_tv4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="考勤日期"
                android:textSize="20dp" />

            <View
                android:layout_width="0.5px"
                android:layout_height="fill_parent"
                android:background="#000"
                android:visibility="visible" />


            <TextView
                android:id="@+id/kaoqin2_tv5"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="考勤状态"
                android:textSize="20dp" />

            <View
                android:layout_width="0.5px"
                android:layout_height="fill_parent"
                android:background="#000"
                android:visibility="visible" />

            <TextView
                android:id="@+id/kaoqin2_tv6"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="操作"
                android:textSize="20dp" />

        </LinearLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="531dp" />
    </LinearLayout>

</FrameLayout>